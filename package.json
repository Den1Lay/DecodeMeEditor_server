{
  "name": "server",
  "version": "0.0.1",
  "private": true,
  "author": {
    "name": "Ilay Denisow"
  },
  "license": "MIT",
  "dependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@babel/runtime": "^7.11.2",
    "axios": "^0.19.2",
    "cookie-parser": "~1.4.4",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "fastest-clone": "^1.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "~1.9.1",
    "multer": "^1.4.2",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "rimraf": "^3.0.1",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0",
    "uuid": "^8.2.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.11.0",
    "chalk": "^4.1.0",
    "jest": "^25.1.0",
    "watch": "^1.0.2"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "./src/*"
    ]
  },
  "scripts": {
    "start": "npm run prod",
    "build": "npm-run-all clean transpile",
    "server": "node ./dist-server/bin/www",
    "dev": "npm-run-all build server",
    "prod": "npm-run-all build server",
    "transpile": "babel ./src --out-dir dist-server",
    "clean": "rimraf dist-server",
    "stop": "node server.stop.js",
    "dev-restart": "watch \"run-p stop dev\" src",
    "debugServer": "node --inspect ./dist-server/bin/www",
    "debug": "npm-run-all build debugServer"
  }
}
